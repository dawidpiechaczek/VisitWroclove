<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/wl_iv_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/wl_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:layout_alignTop="@+id/wl_iv_image"
        android:layout_toRightOf="@+id/wl_iv_image"
        android:layout_toEndOf="@+id/wl_iv_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/wl_iv_image"
        android:layout_toRightOf="@+id/wl_iv_image"
        android:layout_toEndOf="@+id/wl_iv_image"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/wl_iv_show_details"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/ic_details"
            android:textSize="50sp" />


        <TextView
            android:id="@+id/wl_iv_make_route"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/ic_route"
            android:textSize="50sp" />
    </LinearLayout>
</RelativeLayout>